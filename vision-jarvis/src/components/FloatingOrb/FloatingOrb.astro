---
// 悬浮球组件
---

<div id="floating-orb" class="fixed bottom-8 right-8 z-50">
  <button
    id="orb-button"
    class="w-16 h-16 rounded-full gradient-primary relative
           hover:scale-110 transition-transform duration-300
           float-animation pulse-glow cursor-pointer
           flex items-center justify-center
           border-2 border-[#00D4FF40]"
    aria-label="打开助手"
  >
    <!-- Brain Icon -->
    <svg
      class="w-8 h-8 text-white"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      <path
        d="M9.5 2A2.5 2.5 0 0 1 12 4.5v15a2.5 2.5 0 0 1-4.96.44 2.5 2.5 0 0 1-2.96-3.08 3 3 0 0 1-.34-5.58 2.5 2.5 0 0 1 1.32-4.24 2.5 2.5 0 0 1 1.98-3A2.5 2.5 0 0 1 9.5 2Z"
      />
      <path
        d="M14.5 2A2.5 2.5 0 0 0 12 4.5v15a2.5 2.5 0 0 0 4.96.44 2.5 2.5 0 0 0 2.96-3.08 3 3 0 0 0 .34-5.58 2.5 2.5 0 0 0-1.32-4.24 2.5 2.5 0 0 0-1.98-3A2.5 2.5 0 0 0 14.5 2Z"
      />
    </svg>
  </button>
</div>

<script>
  const orbButton = document.getElementById('orb-button');
  
  orbButton?.addEventListener('click', () => {
    // 触发展开事件
    window.dispatchEvent(new CustomEvent('toggle-assistant'));
  });
</script>
